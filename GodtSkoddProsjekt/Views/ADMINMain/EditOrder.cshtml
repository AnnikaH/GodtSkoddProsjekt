@model Model.Order

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@{
    ViewBag.Title = "Admin Endre ordre";
}

<div class="col-sm-9">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h2 class="header">Endre ordre</h2>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.id)

          
                    @Html.HiddenFor(model => model.userID, new { htmlAttributes = new { @class = "form-control" } })
                 
                    @Html.HiddenFor(model => model.date, new { htmlAttributes = new { @class = "form-control" } })
                   
            @foreach (var orderline in Model.orderlines)
            {   
                <div align="center">
                    <h4>Ordrelinje med id nr. @Html.DisplayFor(modelitem => orderline.id)</h4>
                    @Html.ActionLink("Slett", "DeleteOrderline", "ADMINMain", new { id = orderline.id }, new { @class = "btn btn-danger Cancelbuttons" })<br />
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => orderline.productId, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => orderline.productId, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => orderline.productId, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => orderline.quantity, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => orderline.quantity, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => orderline.quantity, "", new { @class = "text-danger" })
                    </div>
                </div>
            }

            <!-- Og alle ordrelinjene også her ... -->

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    @Html.ActionLink("Avbryt", "CancelOrder", "ADMINMain", new { id = "" }, new { @class = "btn btn-danger Cancelbuttons" })
                    <input type="submit" value="Lagre" class="btn btn-default" />
                </div>
            </div>
        </div>

    }
     </div>

