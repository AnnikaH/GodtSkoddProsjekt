@model IEnumerable<Model.Product>

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@{ 
    ViewBag.Title = "Admin Produkter";
}

<div class="col-sm-9">
    <h2 class="header">Produkter</h2>

    <p>
        <div class="Searchbar">
            Id: <input type="text" id="searchId" />
            <input type="button" onclick="showAllProducts()" value="Vis alle" class="btn btn-default" />
            <input type="button" style="margin-left: 5px; margin-right: 5px; margin-bottom: 5px;" onclick="searchProduct($('#searchId').val())" value="Søk" class="btn btn-default" />
            <div id="productErrorMessage"></div>
        </div>

        <div class="Link_addnew">
            <span class="glyphicon glyphicon-arrow-down"></span><a href="" class="link_toggle">Vis mer informasjon</a> |
            <span class="glyphicon glyphicon-plus"></span>  @Html.ActionLink("Registrer nytt produkt", "CreateProduct", "ADMINMain", new { id = "" }, new { @class = "" })
        </div>
    </p>

    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.price)
            </th>
         
            <th>
                @Html.DisplayNameFor(model => model.color)
            </th>
          
            <th>
                @Html.DisplayNameFor(model => model.brand)
            </th>
           
            <th>
                @Html.DisplayNameFor(model => model.gender)
            </th>
          
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr class="productLine">
                <td>
                    @Html.DisplayFor(modelItem => item.id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.price)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.color)
                </td>
                
                <td>
                    @Html.DisplayFor(modelItem => item.brand)
                </td>
              
                <td>
                    @Html.DisplayFor(modelItem => item.gender)
                </td>
              
                <td>
                    @Html.ActionLink("Endre", "EditProduct", "ADMINMain", new { id = item.id }, new { @class = "" }) |
                    <a onclick="toggleRow(@item.id)">Se detaljer</a> |
                    @Html.ActionLink("Slett", "DeleteProduct", "ADMINMain", new { id = item.id }, new { @class = "" }) 
                </td>
            </tr>
            <tr id="@item.id" class="MoreInfo">
                <td colspan="7">
                    <table class="MoreInfoTable">
                        <tr>
                            <td class="table_header">Id:</td><td>@Html.DisplayFor(modelItem => item.id)</td>
                        </tr>
                        <tr>
                            <td class="table_header">Navn: </td><td>@Html.DisplayFor(modelItem => item.name)</td>
                        </tr>
                        <tr><td class="table_header">Pris: </td><td>@Html.DisplayFor(modelItem => item.price)</td></tr>
                        <tr><td class="table_header">Størrelse:</td><td>@Html.DisplayFor(modelItem => item.size)</td></tr>
                        <tr><td class="table_header">Farge:</td><td>@Html.DisplayFor(modelItem => item.color)</td></tr>
                        <tr><td class="table_header">Materiale:</td><td>@Html.DisplayFor(modelItem => item.material)</td></tr>
                        <tr><td class="table_header">Merke:</td><td>@Html.DisplayFor(modelItem => item.brand)</td></tr>
                        <tr><td class="table_header">Bilde-url:</td><td>@Html.DisplayFor(modelItem => item.url)</td></tr>
                        <tr><td class="table_header">For hvem:</td><td>@Html.DisplayFor(modelItem => item.gender)</td></tr>
                        <tr><td class="table_header">Type sko:</td><td>@Html.DisplayFor(modelItem => item.type)</td></tr>
                    </table>
                </td>
               
            </tr>
        }
    </table>
</div> <!-- /. col-sm-9 aka wrapper -->